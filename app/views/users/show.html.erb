<h1><%= @user.email %></h1>

<table width="400">
  <tr>
    <th width="50%" align="left" valign="top">Preference</th>
    <th width="50%" align="left" valign="top">Value</th>
  </tr>
  <% @user.preferences.each do |k,v| -%>
  <tr>
    <td width="50%" align="left" valign="top"><%= k %></td>
    <td width="50%" align="left" valign="top"><%= v %></td>
  </tr>
  <% end -%>
</table>

<p><%= link_to "Edit", edit_user_path(@user), :class => "btn btn-primary" %></p>
<%= button_to "Delete", @user, :method => :delete, :class => "btn btn-danger", :confirm => "Are you CERTAIN you want to delete this user? This CANNOT be undone." %>